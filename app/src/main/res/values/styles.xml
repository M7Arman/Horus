<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="board_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/board_title_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/board_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/board_title_margin_bottom</item>
    </style>

    <style name="board_list_section">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_height">300dp</item>-->
        <item name="android:layout_marginTop">@dimen/board_section_margin_top</item>
    </style>

    <style name="more_button">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/more_button_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorButton</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginRight">@dimen/more_button_margin_right</item>
        <item name="android:layout_marginTop">@dimen/more_button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/more_button_margin_bottom</item>
    </style>

    <style name="card_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
    </style>

    <style name="clickable_item">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

</resources>
