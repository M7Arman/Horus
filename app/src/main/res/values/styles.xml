<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="board_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/board_title_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/board_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/board_title_margin_bottom</item>
    </style>

    <style name="board_list_section">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/board_section_margin_top</item>
    </style>

    <style name="more_button">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/more_button_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorButton</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginRight">@dimen/more_button_margin_right</item>
        <item name="android:layout_marginTop">@dimen/more_button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/more_button_margin_bottom</item>
    </style>

    <style name="clickable_item">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="card_item" parent="clickable_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
    </style>

    <style name="card_item_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:hint">@string/card_with_no_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
    </style>

    <style name="card_item_image">
        <item name="android:layout_width">@dimen/card_item_width</item>
        <item name="android:layout_height">@dimen/card_item_height</item>
        <item name="android:contentDescription">@string/card_content_description</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/trip</item>
    </style>

    <style name="card_item_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">end</item>
        <item name="android:text">@string/card_label</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_item_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:src">@android:drawable/ic_btn_speak_now</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="item_detail_section">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_height">@dimen/item_detail_section_height</item>
        <item name="android:textSize">@dimen/item_detail_section_text_size</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

</resources>
