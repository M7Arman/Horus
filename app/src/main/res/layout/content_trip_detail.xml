<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.TripDetailActivity"
    tools:showIn="@layout/activity_trip_detail"
    android:background="@color/colorBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <!--android:src="@drawable/trip1"-->
        <ImageView
            android:id="@+id/trip_detail_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_detail_image_height"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--android:text="Mt Maymekh, Armenia"-->
            <TextView
                android:id="@+id/trip_detail_from"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                style="@style/item_detail_section"
                android:drawableStart="@drawable/ic_start"
                android:drawableLeft="@drawable/ic_start" />

            <!--android:text="Mt Maymekh, Armenia"-->
            <TextView
                android:id="@+id/trip_detail_target"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/item_detail_section"
                android:drawableStart="@drawable/ic_target"
                android:drawableLeft="@drawable/ic_target" />

        </LinearLayout>

        <!--android:text="Monday, September 13 - 08:00"-->
        <TextView
            android:id="@+id/trip_detail_date"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            style="@style/item_detail_section"
            android:drawableLeft="@drawable/ic_calendar" />

        <!--android:text="@string/card_content_description"-->
        <TextView
            android:id="@+id/trip_detail_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            style="@style/item_detail_section"
            android:typeface="serif"
            android:padding="5dp" />

    </LinearLayout>

</ScrollView>
